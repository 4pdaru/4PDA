<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<View
		android:layout_width="match_parent"
		android:layout_height="16dp"
		android:background="@drawable/zoom_panel_top_shadow"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:paddingTop="@dimen/offset_normal"
		android:paddingLeft="@dimen/offset_normal"
		android:paddingRight="@dimen/offset_normal"
		android:orientation="vertical">

		<TextView
			android:id="@+id/text_size_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/offset_small"
			android:gravity="center"
			android:textSize="16sp"
			tools:text="Размер шрифта: 100%" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/decrease_view"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:clickable="true"
				android:gravity="center"
				android:padding="@dimen/offset_normal"
				android:text="&#8211;"
				android:textSize="20sp" />

			<TextView
				android:id="@+id/increase_view"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:clickable="true"
				android:gravity="center"
				android:padding="@dimen/offset_normal"
				android:text="+"
				android:textSize="20sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/reset_view"
				style="@style/MaterialFlatButton"
				android:text="@string/reset" />

			<TextView
				android:id="@+id/close_view"
				style="@style/MaterialFlatButton"
				android:layout_marginLeft="@dimen/offset_normal"
				android:text="@string/close" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
